<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/transaction_button2"
        android:layout_width="284dp"
        android:layout_height="63dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="245dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:radius="150dp"
        android:shape="rectangle"
        android:text="All Entries"
        android:textColor="#EEF0F1"
        android:textSize="28sp"
        app:backgroundTint="#BC00BCD4"
        app:cornerRadius="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewuser"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="351dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="320dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:radius="150dp"
        android:shape="rectangle"
        android:text="View User"
        android:textColor="#F7FAFB"
        android:textSize="30sp"
        app:backgroundTint="#BE2196F3"
        app:cornerRadius="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addtransaction"
        android:layout_width="290dp"
        android:layout_height="62dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:radius="150dp"
        android:shape="rectangle"
        android:text="Add Transaction"
        android:textColor="#FDFAFD"
        android:textSize="25sp"
        app:backgroundTint="#B221AAF3"
        app:cornerRadius="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createuser"
        android:layout_width="287dp"
        android:layout_height="66dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:radius="150dp"
        android:shape="rectangle"
        android:text="Create User"
        android:textColor="#F9F9FA"
        android:textSize="28sp"
        app:backgroundTint="#952196F3"
        app:cornerRadius="150dp"
        app:layout_constraintBottom_toTopOf="@+id/addtransaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="353dp"
        android:layout_height="83dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="616dp"
        android:ems="10"
        android:fontFamily="@font/berkshire_swash"
        android:inputType="textPersonName"
        android:text="RD Book"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#F4F1F1"
        android:textColorHighlight="#DC3030"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>